{
  "extends": ["next/core-web-vitals", "plugin:react/recommended", "prettier"],
  "rules": {
    "no-unused-vars": "error",
    "indent": ["error", 2],
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": false }
    ],
    "no-mixed-operators": "error",
    "max-len": ["error", {"code": 100, "ignoreUrls": true}],
    "semi": [2, "always"]
  }
}
